<!-- require_relative "longest_word" -->

<% if user_signed_in? %>

<h2>Welcome to the longest word-game !</h2>

<h3>Here is your grid :</h3>

<p><%= @generate_grid  %></p>

<form action="/score">
  <label for="question">What's your best shot ?</label>
  <input type="text" id="question" name="user_answer" placeholder="try me!">
  <input type="hidden" name="grid" value="<%= @generate_grid %>">
  <input type="hidden" name="start_time" value="<%= @start_time %>">
  <input type="submit" value="Go on!" class="btn btn-primary btn-large">
</form>

<% else %>

<p>
<%= link_to "Sign up Now!", new_user_registration_path, class: "btn btn-primary btn-large" %>
</p>

<p>
<%= link_to "login", new_user_session_path %>
</p>

<% end %>



